@model VendeTodo.ViewModels.UsuarioVM
@{
    ViewBag.Title = VendeTodo.Helpers.ConstantHelpers.Login.loginViewName;
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/login/css")
</head>
<body>

    <!-- Preloader -->
    <div class="preloader">
        <div class="cssload-speeding-wheel"></div>
    </div>
    <section id="wrapper" class="login-register">
        <div class="login-box login-sidebar">
            <div class="white-box">
                @using (Html.BeginForm(VendeTodo.Helpers.ConstantHelpers.Login.loginViewName, VendeTodo.Helpers.ConstantHelpers.Login.controllerName, FormMethod.Post, new { @class = "form-horizontal form-material", @id = "loginform" }))
                {
                    <a href="javascript:void(0)" class="text-center db">
                        <img src="../Content/img/agileadmin-logo.png" alt="Home" />
                        <br /><img src="../Content/img/agileadmin-text.png" alt="Home" />
                    </a>
                    <div class="form-group m-t-40">
                        <div class="col-xs-12">
                            @Html.TextBoxFor(x => x.DNI, new { @class = "form-control", @required = "", @placeholder = "Username" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.PasswordFor(x => x.password, new { @class = "form-control", @required = "", @placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                        </div>
                    </div>
                    
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Teléfono : 224-2585</p>
                        </div>
                    </div>
                }
                <form class="form-horizontal" id="recoverform" action="https://wrappixel.com/demos/admin-templates/agile-admin/dark/index.html">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <h3>Recover Password</h3>
                            <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/login/scripts")

</body>
</html>
