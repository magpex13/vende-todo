@model VendeTodo.ViewModels.ListDetalleCuentaVM
@{
    ViewBag.Title = VendeTodo.Helpers.ConstantHelpers.DetalleCuenta.cuentaViewName;
}

<div class="row">
    <div class="col-lg-12">
        <div class="white-box">
            @*<h3 class="box-title m-b-0">Kitchen Sink</h3>
            <p class="text-muted m-b-20">Swipe Mode, ModeSwitch, Minimap, Sortable, SortableSwitch</p>*@
            <table class="tablesaw table-bordered table-hover table" data-tablesaw-mode="swipe" data-tablesaw-sortable data-tablesaw-sortable-switch data-tablesaw-minimap data-tablesaw-mode-switch>
                <thead>
                    <tr>
                        <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="persist">Cuenta N°</th>
                        <th scope="col" data-tablesaw-sortable-col data-tablesaw-sortable-default-col data-tablesaw-priority="3">Tasa Interés Mora</th>
                        <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="2">Fecha Inicial</th>
                        <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="1">
                            <abbr title="Rotten Tomato Rating">Fecha Final</abbr>
                        </th>
                        <th scope="col" data-tablesaw-sortable-col data-tablesaw-priority="4">Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.lstDetalleCuentas)
                    {
                        <tr>
                            <td class="title"><a href="@Url.Action(VendeTodo.Helpers.ConstantHelpers.Compras.compraViewName,VendeTodo.Helpers.ConstantHelpers.Compras.controllerName,new { detallecuentaid = item.idDetalleCuenta })">Cuenta @item.idDetalleCuenta</a></td>
                            <td>@item.tasaInteresMora</td>
                            <td>@item.fechaInicial.ToShortDateString()</td>
                            <td>@item.fechaFinal.ToShortDateString()</td>
                            <td>@item.estado</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

